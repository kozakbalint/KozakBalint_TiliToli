<Window x:Class="TiliToli.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TiliToli"
        mc:Ignorable="d"
        Title="TiliToli" Height="450" Width="450">
    <Grid x:Name="grid">
        <Label x:Name="boardSizeLabel" Content="Add meg a tábla méretét a játékhoz:" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10,168,133,217"/>
        <TextBox x:Name="boardSizeInput" TextWrapping="Wrap" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="18" Margin="314,0,10,50" Height="34" Width="118" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        <Button x:Name="gameButton" Content="Játék" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18" Width="79" Height="46" Panel.ZIndex="-3" Margin="0,50,0,0" Click="Game_Click"/>
    </Grid>
</Window>
