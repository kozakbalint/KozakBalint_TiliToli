<Window x:Class="TiliToli.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TiliToli"
        mc:Ignorable="d"
        Title="TiliToli" Height="450" Width="450">
    <Grid x:Name="grid">
        <Label x:Name="boardSizeLabel" Content="Adja meg a tábla méretét (Min:3, Max:10)" HorizontalAlignment="Left" Margin="10,147,0,0" VerticalAlignment="Top" FontSize="14"/>
        <TextBox x:Name="boardSizeInput" HorizontalAlignment="Left" Height="29" Margin="312,147,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" FontSize="14"/>
        <Button x:Name="gameButton" Content="Játék" HorizontalAlignment="Center" Margin="0" VerticalAlignment="Center" Width="75" FontSize="14" Click="GameClickEvent"/>

    </Grid>
</Window>
